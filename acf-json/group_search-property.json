{
  "key": "group_search_property_block",
  "title": "Block: Search Property",
  "fields": [

    {
      "key": "field_search_form_only",
      "label": "Search Form Only",
      "name": "search_form_only",
      "type": "true_false",
      "ui": 1,
      "default_value": 0,
      "message": "Enable this if you want to show only the search form"
    },

    {
      "key": "field_category",
      "label": "Property Category",
      "name": "property_category",
      "type": "select",
      "ui": 1,
      "allow_null": 1,
      "return_format": "value",
      "default_value": "",
      "choices": {
        "" : "Default",
        "events": "Events",
        "private-stays": "Private Stays"
      },
      "instructions": "Filters the results based on the property type. Leave as Default to include everything."
    },

    {
      "key": "field_vibe",
      "label": "Vibe",
      "name": "vibe",
      "type": "select",
      "multiple": 1,
      "ui": 1,
      "choices": {
        "coastal_retreats": "Coastal Retreats",
        "mountain_escapes": "Mountain Escapes",
        "forest_hideaways": "Forest Hideaways",
        "country_estates": "Country Estates",
        "island_sanctuaries": "Island Sanctuaries",
        "desert_horizons": "Desert Horizons",
        "urban_oasis": "Urban Oasis",
        "open_suggestions": "I’m open to suggestions"
      },
      "default_value": [
        "coastal_retreats",
        "mountain_escapes",
        "forest_hideaways",
        "country_estates",
        "island_sanctuaries",
        "desert_horizons",
        "urban_oasis",
        "open_suggestions"
      ]
    },

    {
      "key": "field_event_type",
