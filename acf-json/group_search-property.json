    {
      "key": "field_guests",
      "label": "Guests",
      "name": "guests",
      "type": "select",
      "multiple": 1,
      "ui": 1,
      "choices": {
        "1-5": "Just for You (1–5 people)",
        "5-10": "5–10 people",
        "11-20": "11–20 people",
        "21-30": "21–30 people",
        "31-50": "31–50 people",
        "51-70": "51–70 people",
        "71-100": "71–100 people",
