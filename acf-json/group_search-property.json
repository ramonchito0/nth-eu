      "type": "select",
      "multiple": 1,
      "ui": 1,
      "choices": {
        "Executive Retreat": "Executive Retreat",
        "Workshop": "Workshop",
        "Wellness Retreat": "Wellness Retreat",
        "Exclusive Use": "Exclusive Use",
        "Celebrations & Milestones": "Celebrations & Milestones",
        "Team Building": "Team Building",
        "Personal Stay": "Personal Stay"
      },
      "default_value": [
        "Executive Retreat",
        "Workshop",
        "Wellness Retreat",
        "Exclusive Use",
        "Celebrations & Milestones",
        "Team Building",
        "Personal Stay"
      ]
