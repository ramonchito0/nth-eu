    {
      "key": "field_style",
      "label": "Style",
      "name": "style",
      "type": "select",
      "multiple": 1,
      "ui": 1,
      "choices": {
        "heritage": "Heritage",
        "contemporary": "Contemporary",
        "eco_luxury": "Eco Luxury",
        "boutique_villas": "Boutique Villas",
        "converted_spaces": "Converted Spaces",
        "open_suggestions": "I’m open to suggestions"
